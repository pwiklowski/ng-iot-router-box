{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "module": "umd",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "sourceMap": true,
    // "noUnusedLocals": true,
    //"strict": true,
    "outDir": "build",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "src",
    "paths": {
      "src": ["./src/*"]
    }
  },
  "exclude": ["build", "node_modules"]
}
